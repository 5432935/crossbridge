# Purpose: ASC2 Launch Helper Script
# Author: Andras Csizmadia

if [ "x${AIR_SDK_HOME}" = "x" ]
then
    SCRIPT_HOME=`dirname $0`
    AIR_SDK_HOME=${SCRIPT_HOME}/..
else
    echo Using AIR SDK: $AIR_SDK_HOME
fi

case `uname` in
        CYGWIN*)
            OS="Windows"
        ;;
        *)
            OS=Unix
esac


if [ $OS = "Windows" ]; then

    AIR_SDK_HOME=`cygpath -m $AIR_SDK_HOME`

fi

VMARGS="-Dsun.io.useCanonCaches=false -Xms32m -Xmx512m "

java $VMARGS $SETUP_SH_VMARGS -Dflexlib="$AIR_SDK_HOME/frameworks" -jar "$AIR_SDK_HOME/lib/asc2-cli.jar" "$@"